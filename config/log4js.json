{
  "appenders": {
    "out": { "type": "console" },
    "task": {
      "type": "dateFile",
      "filename": "logs/task",
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncludePattern": true
    }
  },
  "categories": {
    "default": { "appenders": [ "out" ], "level": "info" },
    "task": { "appenders": [ "task" ], "level": "info" }
  }
}
